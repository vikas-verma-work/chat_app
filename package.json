{
    "name": "chat_application_root",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "start-server": "cd server && npm run dev",
        "start-client": "cd client && npm run dev",
        "start-electron": "cd client && npm run dev:electron",
        "dev": "concurrently \"npm run start-server\" \"npm run start-client\" \"wait-on http://localhost:5173 && npm run start-electron\""
    },
    "dependencies": {
        "concurrently": "^7.6.0",
        "wait-on": "^7.0.1"
    }
}